{
  "languages": {
    "Rust": {
      "format_on_save": "on",
      "formatter": "language_server",
      "language_servers": ["rust-analyzer"],
      "tab_size": 4
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy",
          "allTargets": true
        },
        "cargo": {
          "allFeatures": true
        },
        "diagnostics": {
          "enable": true,
          "experimental": {
            "enable": true
          }
        }
      }
    }
  },
  "file_scan_exclusions": [
    "**/target"
  ]
}
